@model IEnumerable<ControlWavi.Models.Producto>

@{
    ViewData["Title"] = "Mantenimiento de Productos";
}

<section class="container px-4 py-5 my-5">
  <h1 class="display-6 fw-bold text-center">@ViewData["Title"]</h1>
  <a class="btn btn-dark" asp-action="Create" data-bs-toggle="tooltip" data-bs-placement="top" title="Nuevo producto">Nuevo&nbsp;<i class="bi bi-plus-circle"></i></a>
  <main class="mainDestacados">
      <div class="containerProdutos mt-5">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PorcentajeDescuento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImageName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PorcentajeDescuento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Editar"><i class="bi bi-pencil-square"></i></a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Ver mÃ¡s"><i class="bi bi-eye"></i></a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" data-bs-toggle="tooltip" data-bs-placement="top" title="Eliminar"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>   
  </main>
</section>     
